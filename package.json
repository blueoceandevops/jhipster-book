{
  "name": "jhipster-book",
  "version": "5.0.2",
  "description": "The JHipster Mini-Book",
  "author": "Matt Raible <matt@raibledesigns.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:mraible/jhipster-book.git"
  },
  "scripts": {
    "build": "bash ./gradlew all",
    "clean": "bash ./gradlew clean",
    "setup": "npm install && npm run build",
    "build:site": "antora --generator=mini-book-site-generator --html-url-extension-style=indexify site.yml",
    "watch:site": "node watch-site.js"
  },
  "devDependencies": {
    "@antora/cli": "^3.0.1",
    "browser-sync": "^2.27.7",
    "chokidar": "^3.5.3",
    "gulp": "4.0.2",
    "mini-book-site-generator": "0.1.3"
  }
}
